<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <main>
        <div class="main-page">
            <h1>Dashboard</h1>
            <section class="projects-section">
                <h2>Tus Proyectos: <%= totalProjects %></h2>
                <div class="projects-grid">
                    <% projects.forEach(function(project) { %>
                        <div class="card">
                            <div class="project-header">
                                <h3><%= project.name %></h3>
                                <span class="project-type <%= project.type.toLowerCase() %>">
                                    <%= project.type %>
                                </span>
                            </div>
                            <div class="project-info">
                                <p class="project-details">
                                    <% if(project.type == 'Carpeta') { %>
                                        <span title="Sin index">No cuenta con index.html o index.php</span>
                                    <% } else { %>
                                            <span title="Ubicacion Host">üóÑÔ∏è http://localhost:<%= project.type == 'PHP' ? 9000 : 3000 %>/<%= project.name %></span>
                                    <% } %>

                                    <span title="√öltima modificaci√≥n">üïí <%= project.lastModified %></span>
                                </p>
                            </div>
                            <a href="/<%= project.name %>" class="btn">Ver Proyecto</a>
                        </div>
                    <% }); %>
                </div>
            </section>
        </div>
    </main>

    <footer>
